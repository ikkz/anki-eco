{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Anki Deck Build Configuration",
  "description": "Schema for build.json files used in Anki deck packaging",
  "type": "object",
  "required": [
    "note_type_name",
    "deck_name",
    "note_type_id",
    "deck_id",
    "fields",
    "notes"
  ],
  "properties": {
    "note_type_name": {
      "type": "string",
      "description": "Name of the Anki note type"
    },
    "deck_name": {
      "type": "string",
      "description": "Name of the Anki deck"
    },
    "note_type_id": {
      "type": "integer",
      "description": "Unique identifier for the note type"
    },
    "deck_id": {
      "type": "integer",
      "description": "Unique identifier for the deck"
    },
    "fields": {
      "type": "array",
      "description": "List of field names for the note type",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "notes": {
      "type": "array",
      "description": "List of notes to be added to the deck",
      "items": {
        "type": "object",
        "required": ["fields"],
        "properties": {
          "fields": {
            "type": "object",
            "description": "Field values for this note",
            "patternProperties": {
              "^.*$": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
    },
    "additionalProperties": false
  }
}
