{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "types": ["vite/client"],
    "rootDir": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo"
  },
  "exclude": [
    "out-tsc",
    "dist",
    ".vitepress/**/*.spec.ts",
    ".vitepress/**/*.test.ts",
    ".vitepress/**/*.spec.vue",
    ".vitepress/**/*.test.vue",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.vue",
    "src/**/*.test.vue",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": [
    ".vitepress/**/*.js",
    ".vitepress/**/*.jsx",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.mts",
    ".vitepress/**/*.vue",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.vue",
    "types.d.ts",
    "env.d.ts"
  ],
  "references": [
    {
      "path": "../../packages/extensions/tsconfig.lib.json"
    }
  ]
}
